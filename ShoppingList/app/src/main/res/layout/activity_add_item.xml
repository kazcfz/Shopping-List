<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginStart="10sp"
    android:layout_marginEnd="10sp"
    android:layout_marginTop="10sp"
    android:layout_marginBottom="10sp"
    tools:context=".AddItemActivity">

    <TextView
        android:id="@+id/textView_ShoppingItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/darkGreen"
        android:textStyle="bold"
        android:layout_marginBottom="5sp"
        android:text="@string/shopping_item" />

    <EditText
        android:id="@+id/editText_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:hint="Shopping Item" />

    <TextView
        android:id="@+id/textView_Detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:textColor="@color/darkGreen"
        android:textStyle="bold"
        android:layout_marginBottom="5sp"
        android:text="@string/details" />

    <EditText
        android:id="@+id/editText_details"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:ems="10"
        android:gravity="start|top"
        android:background="@drawable/border_textview"
        android:padding="2sp"
        android:paddingStart="5sp"
        android:paddingEnd="5sp"
        android:inputType="textMultiLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_Quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:text="Quantity"
                android:textColor="@color/darkGreen"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton_decreaseQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="5sp"
                    app:srcCompat="@drawable/arrow_down" />

                <TextView
                    android:id="@+id/textView_quantityTextAdd"
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:background="@drawable/border_textview"
                    android:padding="2sp"
                    android:paddingStart="5sp"
                    android:paddingEnd="5sp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="1"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <ImageButton
                    android:id="@+id/imageButton_increaseQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5sp"
                    app:srcCompat="@drawable/arrow_up" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_Size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="75sp"
                android:layout_marginBottom="5sp"
                android:text="Size"
                android:textColor="@color/darkGreen"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_size"
                android:layout_width="100dp"
                android:layout_height="25sp"
                android:layout_marginStart="75sp"
                android:background="@drawable/border_textview"
                android:padding="2sp"
                android:paddingStart="5sp"
                android:paddingEnd="5sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBox_urgent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/darkGreen"
            android:textStyle="bold"
            android:text="Urgent" />

    </LinearLayout>

    <Button
        android:id="@+id/button_add"
        android:layout_marginTop="30sp"
        android:text="@string/add_to_list"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_width="275dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        />

</LinearLayout>